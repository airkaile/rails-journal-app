<h1>New Category</h1>

<%= form_with(model: @category) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details, rows: 4 %>
  </div>

  <div>
    <%= form.submit "Create Category" %>
  </div>
<% end %>

<%= link_to 'Back', categories_path %>