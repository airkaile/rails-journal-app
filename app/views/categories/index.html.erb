<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Categories</h1>
    <%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
  </div>

  <div class="grid gap-3">
    <% @categories.each do |category| %>
      <div class="card">
        <h3 class="card-title mb-2"><%= category.title %></h3>
        <p class="text-muted mb-3">
          <%= "There #{category.tasks.count == 1 ? 'is' : 'are'} #{pluralize(category.tasks.count, 'task')} in this category." %>
        </p>
        
        <div class="btn-group">
          <%= link_to "View", category, class: "btn btn-outline-primary" %>
          <%= link_to "Edit", edit_category_path(category), class: "btn btn-outline-secondary" %>
          <%= button_to "Delete", category, method: :delete, 
              class: 'btn btn-sm btn-outline-danger delete-btn', 
              form: { class: "delete-form" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>