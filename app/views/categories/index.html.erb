<h1>My Categories</h1>

<%= link_to 'New Category', new_category_path %>

<ul class="categories-list">
  <% @categories.each do |category| %>
    <li>
      <h3><%= link_to category.title, category %></h3>
      <% if category.details.present? %>
        <p class="details-preview"><%= truncate(category.details, length: 100) %></p>
      <% end %>
      <div class="category-actions">
        <%= link_to 'Edit', edit_category_path(category) %>
        <%= link_to 'Destroy', category, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      </div>
    </li>
  <% end %>
</ul>